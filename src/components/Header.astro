---
import { PawPrint, Menu, X } from "lucide-react";
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/pharmacy", label: "Pharmacy" },
  { href: "/food", label: "Food" },
  { href: "/contact", label: "Contact" },
];
---

<header
  class="sticky top-0 z-50 w-full bg-white/60 backdrop-blur-md transition-colors duration-300 border-b border-green-500/30"
>
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <a href="/" class="flex items-center space-x-2 group">
        <div
          class="p-2 rounded-xl bg-gradient-to-br from-green-600 to-lime-500 transition-transform duration-300 group-hover:scale-105 rounded-tr-none"
        >
          <PawPrint className="h-6 w-6 text-white" />
        </div>
        <span class="text-xl font-bold text-orange-600">Ceqivet</span>
      </a>

      <div class="hidden md:flex md:items-center md:space-x-1">
        {
          navLinks.map((link, index) => (
            <a
              href={link.href}
              class={`px-4 py-2 text-sm font-medium transition-all duration-300
                    ${
                      index === navLinks.length - 1
                        ? "bg-orange-600 text-white rounded-full hover:bg-orange-700 ml-4 shadow-lg shadow-orange-600/30"
                        : "text-gray-700 rounded-md hover:bg-green-100 hover:text-green-700"
                    }`}
            >
              {link.label}
            </a>
          ))
        }
      </div>

      <button
        id="mobile-menu-toggle"
        class="md:hidden p-2 rounded-full text-gray-900 border border-green-500 hover:bg-green-100 transition-colors"
        aria-label="Toggle menu"
      >
        <Menu className="h-6 w-6" />
      </button>
    </div>
  </nav>
</header>
