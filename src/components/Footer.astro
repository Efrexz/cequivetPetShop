---
import { Phone } from "lucide-react";
import Logo from "@assets/images/logo.webp";
import FacebookIcon from "@assets/icons/facebook.svg";
import Instagramicon from "@assets/icons/instagram.svg";
import TiktokIcon from "@assets/icons/tiktok.svg";

const servicesList = [
  { name: "Inicio", href: "/" },
  { name: "Farmacia", href: "/products" },
  { name: "Contacto", href: "#" },
];

const companyList = [
  { name: "Sobre nosotros", href: "/" },
  { name: "Nuestro equipo", href: "/" },
  { name: "FAQ", href: "/" },
];

const socialMediaList = [
  {
    name: "Facebook",
    href: "https://www.facebook.com/share/18yYAUWnLD/",
    icon: FacebookIcon,
  },
  {
    name: "Instagram",
    href: "https://www.instagram.com/ceqivet?igsh=MTVqOWlxN3pxbW5uYw==",
    icon: Instagramicon,
  },
  {
    name: "Tiktok",
    href: "https://www.tiktok.com/@ceqivet?_t=ZS-90xZEgOzB2L&_r=1",
    icon: TiktokIcon,
  },
];
---

<footer class="bg-gray-900 text-white/40 border-t-8 border-orange-500">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 pt-12 pb-8">
    <div
      class="grid grid-cols-2 md:grid-cols-5 gap-8 border-b border-gray-700 pb-10"
    >
      <div class="col-span-2 md:col-span-2 space-y-3">
        <a href="/" class="flex items-center justify-start">
          <img
            src={Logo.src}
            alt="Ceqivet Logo"
            class="h-14 w-auto hover:scale-105 transform transition-transform duration-300 rounded-xl"
          />
        </a>
        <p class="text-sm text-gray-400">Siempre al cuidado de tu mascota.</p>
        <div class="space-y-2 text-sm">
          <p class="flex items-center text-orange-400">
            <Phone className="w-4 h-4 mr-2 " />970 691 590
          </p>
          <p class="text-gray-400">Av Alisos 1539, Lima</p>
        </div>
      </div>

      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-orange-500">Services</h3>
        <ul class="space-y-2">
          {
            servicesList.map((service) => (
              <li>
                <a
                  class="text-gray-400 hover:text-white transition"
                  href={service.href}
                >
                  {service.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-orange-500">Company</h3>
        <ul class="space-y-2">
          {
            companyList.map((company) => (
              <li>
                <a
                  class="text-gray-400 hover:text-white transition"
                  href={company.href}
                >
                  {company.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-orange-500">Siguenos</h3>
        <div class="flex space-x-3">
          {
            socialMediaList.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class={`p-2 rounded-full bg-gray-800 transition duration-300 ease-in-out transform hover:scale-110 flex items-center justify-center`}
                aria-label={social.name}
              >
                <social.icon
                  class={`w-6 h-6 transition ${
                    social.name === "Facebook"
                      ? "hover:text-blue-500"
                      : social.name === "Instagram"
                        ? "hover:text-pink-500"
                        : "hover:text-white"
                  }`}
                />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <div class="pt-8 text-center text-sm text-gray-500">
      &copy; 2025. All rights reserved. | <span class="text-orange-500"
        >Built with Love</span
      >
    </div>
  </div>
</footer>
