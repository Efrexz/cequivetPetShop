---
import Layout from "@layouts/Layout.astro";
import Logo from "@assets/images/logo.webp";
import { Image } from "astro:assets";
import BackgroundPattern from "@components/BackgroundPattern.astro";
---

<Layout title="404 - Página no encontrada">
  <section class="overflow-hidden bg-white text-gray-900 pb-10 relative">
    <!-- Fondo geométrico -->
    <BackgroundPattern />

    <div
      class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center"
    >
      <div class="max-w-2xl mx-auto py-12">
        <div class="mb-8">
          <div
            class="relative w-[250px] h-[250px] sm:w-[300px] sm:h-[300px] mx-auto rounded-full flex items-center justify-center p-2 bg-[#E0F2F7]"
          >
            <div
              class="absolute inset-[-8px] sm:inset-[-10px] rounded-full border-4 border-dashed border-[#4DB6AC] opacity-80"
            >
            </div>
            <div
              class="relative w-full h-full rounded-full border-2 border-[#00BFA5] shadow-md flex items-center justify-center overflow-hidden"
            >
              <Image
                src={Logo}
                alt="Página no encontrada"
                width={300}
                height={300}
                class="w-full h-full object-contain rounded-full"
              />
            </div>
          </div>
        </div>

        <h1
          class="text-6xl sm:text-7xl md:text-8xl font-extrabold leading-tight text-[#FF7F11] drop-shadow-sm mb-4"
        >
          404
        </h1>
        <h2
          class="text-3xl sm:text-4xl font-bold text-[#02ad91] mb-6 drop-shadow-sm"
        >
          ¡Oops! Parece que este producto se ha extraviado.
        </h2>
        <p
          class="text-lg sm:text-xl opacity-90 text-gray-700 mb-8 max-w-lg mx-auto"
        >
          No pudimos encontrar la página que buscas. Probablemente se escapó a
          jugar.
        </p>

        <a
          href="/"
          class="inline-flex items-center justify-center gap-2 px-8 py-3 rounded-xl bg-gradient-to-r from-[#fbab3a] to-[#FF7F11] text-white font-bold hover:opacity-90 transition shadow-lg shadow-yellow-300/40 hover:scale-105 text-lg"
        >
          Volver a la tienda
        </a>
      </div>
    </div>
  </section>
</Layout>
