---
import Layout from "@layouts/Layout.astro";
import CarouselProducts from "@components/Carousel.astro";
import WhatsappIcon from "@assets/icons/whatsapp.svg";
import { foodProducts } from "@data/productsData";
import { pharmacyData } from "@data/pharmacyData";

// getStaticPaths es OBLIGATORIO para rutas dinámicas en SSG
export async function getStaticPaths() {
  // para solucionar el problema de allProducts undefined lo declaramos aca adentro
  const allProducts = [...foodProducts, ...pharmacyData];

  return allProducts.map((product) => ({
    params: { id: product.id.toString() },
  }));
}

const { id } = Astro.params;

const allProducts = [...foodProducts, ...pharmacyData];
const product = allProducts.find((p) => p.id.toString() === id);

if (!product) {
  return Astro.redirect("/404");
}

const whatsappMessage = `Hola, me interesa el producto ${product.name} (${product.price}). ¿Podrías darme más información?`;
const whatsappLink = `https://wa.me/+51970691590?text=${encodeURIComponent(whatsappMessage)}`;
---

<Layout>
  <section class="overflow-hidden bg-white text-gray-900 py-16 relative">
    <!-- Fondo geométrico con gradiente -->
    <div class="absolute inset-0 z-0 opacity-40">
      <svg
        class="w-full h-full"
        viewBox="0 0 1440 800"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M0 0H1440V400C1440 620.914 1260.91 800 1040 800H400C179.086 800 0 620.914 0 400V0Z"
          fill="url(#paint0_linear)"></path>
        <defs>
          <linearGradient
            id="paint0_linear"
            x1="720"
            y1="0"
            x2="720"
            y2="800"
            gradientUnits="userSpaceOnUse"
          >
            <stop stop-color="#E0F7FA"></stop>
            <stop offset="1" stop-color="#E8F5E9"></stop>
          </linearGradient>
        </defs>
      </svg>
    </div>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="relative flex justify-center fade-in-left" data-animate>
          <div
            class="relative w-[300px] h-[300px] sm:w-[350px] sm:h-[350px] md:w-[400px] md:h-[400px] lg:w-[450px] lg:h-[450px] rounded-full flex items-center justify-center p-2"
            style="background-color: #E0F2F7;"
          >
            {/* Círculo punteado exterior más grande */}
            <div
              class="absolute inset-[-10px] sm:inset-[-12px] md:inset-[-15px] rounded-full border-4 border-dashed border-[#4DB6AC] opacity-80"
            >
            </div>

            {/* Contorno interior color esmeralda y la imagen */}
            <div
              class="relative w-full h-full rounded-full border-2 border-[#00BFA5] shadow-md flex items-center justify-center overflow-hidden"
            >
              <img
                src={product.image}
                alt="Alimento Premium para Cachorros Vitality"
                class="w-full h-full object-cover rounded-full"
              />
            </div>
          </div>
        </div>

        {/* Detalles del Producto */}
        <div class="space-y-6 fade-in-right" data-animate>
          <h1
            class="text-4xl sm:text-5xl font-extrabold leading-tight text-[#02ad91] drop-shadow-sm"
          >
            {product.name}
          </h1>
          <p class="text-4xl font-extrabold text-[#FF7F11]">{product.price}</p>
          <p class="text-lg sm:text-xl opacity-90 text-gray-700">
            {product.description}
          </p>

          {/* Botón de Acción */}
          <a
            href={whatsappLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-6 py-2 rounded-xl bg-gradient-to-r from-[#fbab3a] to-[#FF7F11] text-white font-bold hover:opacity-90 transition shadow-lg shadow-yellow-300/40 hover:scale-105 text-base whitespace-nowrap max-w-xs mx-auto lg:px-8 lg:py-3"
            aria-label={`Pedir ${product.name} por WhatsApp`}
          >
            <WhatsappIcon class="w-5 h-5 lg:w-6 lg:h-6" />
            <!-- Ajusta el tamaño del icono también si es necesario -->
            Comprar por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <CarouselProducts
    section="related"
    title="Productos"
    titleHighlight="Relacionados"
    subtitle="Podrían interesarte otros productos para el cuidado de tu peludo."
  />
</Layout>
